<%- include('layout/header') %>

<!-- server/views/edit.ejs -->
<div class="container" style="margin-top: 3rem;">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-primary">
          <h3 class="text-light">Edit Form</h3>
        </div>
        <div class="card-body">
          <form action="/update/<%= elselt._id %>" method="post">
            <div class="form-group">
              <label for="full_name">Full Name:</label>
              <input type="text" name="full_name" value="<%= elselt.full_name %>" class="form-control">
            </div>
            <div class="form-group">
              <label for="phone_number">Phone Number:</label>
              <input type="text" name="phone_number" value="<%= elselt.phone_number %>" class="form-control">
            </div>
              <div class="form-group">
              <label for="phone_number">address:</label>
              <input type="text" name="address" value="<%= elselt.address %>" class="form-control">
            </div>
            <!-- ... -->
            <button type="submit" action="/update/<%= elselt._id %>" class="btn btn-primary mt-3 d-block mx-auto">Save Changes</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>